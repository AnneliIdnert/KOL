<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.idnert.kol_app.Exercis_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_header"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:text="DANSA"
            android:textStyle="bold"
            android:typeface="normal"
            android:textAlignment="center" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_image"
            android:layout_alignParentEnd="true"
            android:src="@drawable/test" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_decription"
            android:text="Ta en sväng om är aldrig fel! sätt på musik och rör dig i tackt med musiken. Lyft armarna och gunga med knäna! allt känns roligt med lite rörelse till musik"
            android:layout_marginRight="16dp"
            android:layout_alignBaseline="@+id/btnFinish"
            android:layout_alignBottom="@+id/btnFinish"
            android:layout_alignEnd="@+id/exercis_time" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMusic"
            android:text="Sätt på musik!"
            android:layout_below="@+id/exercis_time"
            android:layout_toEndOf="@+id/exercis_header" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_time"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/exercis_decription"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTime"
            android:text="Starta tid!"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/btnMusic"
            android:layout_toEndOf="@+id/btnFinish" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinish"
            android:text="Klar"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnMusic"
            android:layout_marginBottom="43dp"
            android:clickable="false"
            android:onClick="finich" />

    </RelativeLayout>

</LinearLayout>
