<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.idnert.kol_app.Exercis_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_header"
            android:textSize="30sp"
            android:text="DANSA"
            android:textStyle="bold"
            android:typeface="normal"
            android:textAlignment="center"
            android:layout_below="@+id/exercis_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_image"
            android:src="@drawable/test"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exercis_decription"
            android:text="Ta en svängom är aldrig fel! sätt på musik och rör dig i takt med musiken. Lyft armarna och gunga med knäna! allt känns roligt med lite rörelse till musik"
            android:layout_below="@+id/exercis_header"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="19dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMusic"
            android:text="Sätt på musik!"
            android:background="#acf0ee"
            android:textColor="#000000"
            android:layout_alignTop="@+id/btnTime"
            android:layout_toStartOf="@+id/exercis_header"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTime"
            android:text="Starta tid!"
            android:background="#acf0ee"
            android:textColor="#000000"
            android:layout_below="@+id/exercis_decription"
            android:layout_toEndOf="@+id/exercis_header"
            android:layout_marginTop="5dp"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFinish"
            android:text="Klar"
            android:clickable="false"
            android:onClick="finich"
            android:background="#acf0ee"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>
